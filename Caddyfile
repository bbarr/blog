
prosaic.foo {
	tls ./certs/prosaic.foo.pem ./certs/prosaic.foo-key.pem
	reverse_proxy localhost:3000 {
		header_up Host {host}
		header_up Origin {host}
		header_up X-Real-IP {remote}
		header_up X-Forwarded-Host {host}
		header_up X-Forwarded-Server {host}
		header_up X-Forwarded-Port {port}
		header_up X-Forwarded-For {remote}
	}
}

*.prosaic.foo {
	tls ./certs/_wildcard.prosaic.foo.pem ./certs/_wildcard.prosaic.foo-key.pem
	root * /Users/bbarr/web/ballast/blog/sites/{http.request.host.labels.2}
	file_server
  log {
    level DEBUG
    output stdout
  }
}
