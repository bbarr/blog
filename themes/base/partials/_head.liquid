<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />

    <title>{% if post.title %} {{ post.title }} &middot; {% endif %}{{ site.name }}</title>
    <meta name="description" content="{{ site.description }}">
    <link rel="icon" type="image/png" href="{{ site.favicon }}">

    {% if post %}
      <meta name="og:type" content="article">
      <meta name="og:title" content="{{ post.title }}">
      <meta name="og:url" content="https://{{ site.handle }}.{{ env.HOSTNAME }}/posts/{{ post.publishedTitle | sluggify }}.html">
    {% else %}
      <meta name="og:type" content="website">
      <meta name="og:title" content="{{ site.name }}">
      <meta name="og:description" content="{{ site.description }}">
      <meta name="og:url" content="https://{{ site.handle }}.{{ env.HOSTNAME }}">
    {% endif %}

    <meta name="HandheldFriendly" content="True" />
    <meta name="MobileOptimized" content="320" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

<style>
{{ css }}
</style>

</head>
