{% include 'partials/head.html' %}

<body> 

   {% include 'partials/hero.html' %}

   <div class="content">
      <div class="container">
        <div class="home" id="home">
          <ul class="posts noList">
            {% for post in posts %}
              <li>
                <span class="date">{{ post.publishedAt | date: '%b %d, %Y' }}</span> 
                <h2 class="h3"><a class="post-link" href="/posts/{{ post.publishedTitle | sluggify }}.html">{{ post.title }}</a></h2>
                <p>{{ post.content | truncate: 100 | markdown | strip_html }}</p>
              </li>
            {% endfor %}
          </ul>
          <!-- Pagination links -->
          <div class="pagination">
            {% if prevPage %}
              <a href="{% if prevPage == 0 %}/{% else %}/pages/{{ prevPage}}.html{% endif %}" class="previous button__outline-tertiary">Newer Posts</a> 
            {% endif %}
            {% if nextPage %}
              <a href="/pages/{{ nextPage}}.html" class="next button__outline-tertiary">Older Posts</a>
            {% endif %}
          </div>
        </div>
      </div>
   </div><!-- end .content -->

   {% include 'partials/footer.html' %}

</body>

</html>

